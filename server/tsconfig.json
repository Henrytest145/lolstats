{
  "compilerOptions": {
    "target": "ES5",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
  },
  "include": ["src/**/*.ts"],
}